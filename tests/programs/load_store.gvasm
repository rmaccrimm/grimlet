.begin main
    .arm
// init stack
    mov sp, #0x4000
    ldr r10, =end
    sub r10, r10, #4

// load word, covers [reg] and pc-relative
    ldr r0, [r10]
    ldr r1, =0x56c7c13d
    cmp r0, r1
    beq s1
    ldr r2, =-1
    push {r2}
    b exit
s1:
    mov r2, #1
    push {r2}

// load halfword
    ldrh r0, [r10]
    ldr r1, =0xc13d
    cmp r0, r1
    beq s2
    ldr r2, =-1
    push {r2}
    b exit
s2:
    mov r2, #1
    push {r2}

exit: 
    // test exit condition
    mov r11, #25344
    b end
// data to test reads
    .u8 0x3d
    .u8 0xc1
    .u8 0xc7
    .u8 0x56
end:
    nop
.pool        
.end



